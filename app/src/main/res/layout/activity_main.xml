<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/main2"
    tools:context="com.example.service.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/main"
        android:src="@mipmap/ic_envelope" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/image"
        android:src="@mipmap/ic_action_search" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_twitt"
        android:contentDescription="@string/image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>